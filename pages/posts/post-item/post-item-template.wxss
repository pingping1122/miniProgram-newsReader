
.post-container{
  display:flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-date{
  /* margin-top:10rpx;
  margin-bottom: 20rpx;
  margin-left:10rpx; */
  margin:10rpx 0 20rpx 10rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  height:60rpx;
  width:60rpx;
  /* vertical-align: middle; */
}
.post-date{
  margin-left:20rpx;
  /* vertical-align: middle; */
  font-size:26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight:600;
  margin-bottom: 10px;
  margin-left:10px;
  color:#333;
}
.post-image{
  width:100%;
  height:300px;
  margin-bottom: 15px;
}
.post-content{
  color:#666;
  letter-spacing: 2rpx;
  font-size:28rpx;
  margin-bottom: 20rpx;
  margin-left:20rpx;

}
/*  行内元素相对块状元素--自动顺序排列 */
.post-like{
  display:flex;
  flex-direction: row;
  align-items: center;
  font-size:26rpx;
  margin-left:20rpx;
}
.post-like-image{
  height:32rpx;
  width:32rpx;
  margin-right:16rpx;
}
.post-like-font{
  margin-right:40rpx;
}
